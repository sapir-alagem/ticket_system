<%= form_with(url: tickets_path, method: :get) do %>
  <div class="search-container">
    <%= text_field_tag :query, params[:query], placeholder: "Search tickets...", id: "search-field" %>
    <%= submit_tag "Search" %>
    <span class="info-popup">ℹ️
      <span class="info-text">You can filter by ticket subject, content, or status.</span>
    </span>
  </div>
<% end %>